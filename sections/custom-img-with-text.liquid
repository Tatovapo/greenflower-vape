<style>

/*Main background*/
#shopify-section-{{section.id}} .section_two_wrapper{
  	background: linear-gradient(to top, #000, #399d48);
  {% if section.settings.background_color %}
  	background: {{section.settings.background_color}};
  {% endif %}
    padding: 100px 0;
  	{% if section.settings.full_width == true %}
  		width: 100%
  	{%else%}
  		width: 97%;
	{% endif %}
  	margin: 0 auto;
}
.section_two_wrapper .container{
    max-width: 1300px;
    width: 90%;
    display: flex;
    justify-content: center;
    gap: 20px;
    margin: 0 auto;
    align-items: center;
}
.section_two_wrapper .section-img{
  width: 100%;
  object-fit: contain;
  height: 100%;
  display: block;
  max-height: 600px;
}
.section_two_wrapper .text-section .title{
    font-size: 30px;
    color: var(--color--headings);
      {% if section.settings.title_color %}
      color: {{section.settings.title_color}};
      {% endif %}
/*     font-weight: 600; */
}
.section_two_wrapper .check-lists{
    margin: 20px 0;
}
.section_two_wrapper .check-lists li {
    font-size: 1.7rem;
    color: #fff;
  {% if section.settings.subtitle_color %}
  	color: {{section.settings.subtitle_color}};
  {% endif %}
    list-style: none;
}
.section_two_wrapper .check-lists li i {
    padding-right: 20px;
}

.section_two_wrapper .btns{
    display: flex;
    margin: 20px 0;
}
.section_two_wrapper .btns .single-btn a{
    text-decoration: none;
    font-size: 20px;
    color: #fff;
    padding: 16px 20px 16px 20px;
    border: 1px solid #fff;
    background: none;
    display: inline-block;	
}

.section_two_wrapper .text-section{
    align-self: center;
}
.section_two_wrapper .check-lists li{
    display: flex;
    align-items: center;
}
.section_two_wrapper .flex-container .flex-element{
    flex:1;
}
{% if section.settings.row_reverse == true %}
    #shopify-section-{{section.id}} .flex-container{
        flex-direction: row-reverse;
        gap: 100px;
    }       
{% endif %}


/*responsiveness*/
@media only screen and (max-width: 1147px){
   .section_two_wrapper .text-section .title{
        font-size: 40px;
    }
    .section_two_wrapper .check-lists li {
        font-size: 25px;
    }
}
@media only screen and (max-width: 992px){
    .section_two_wrapper .text-section .title{
        font-size: 35px;
    }
    .section_two_wrapper .check-lists li {
        font-size: 20px;
    }
    .section_two_wrapper .text-section .btns{
        flex-wrap: wrap;
    }
  .section_two_wrapper .text-section .btns .single-btn{
        padding-left: 0px;
    }
  .section_two_wrapper .text-section .btns .single-btn{
        width: 350px;
    }
  .section_two_wrapper .text-section .btns .single-btn a{
        width: 100%;
    }
    .section_two_wrapper .text-section .btns .single-btn{
        margin-top: 20px;
    }
}
@media only screen and (max-width: 886px){
  .section_two_wrapper .section-img{
  	max-height: 100%;
  }
    .section_two_wrapper .flex-container{
        align-items: stretch;
    }
    .section_two_wrapper .img-section{
        height: 100%;
    }
}
@media only screen and (max-width: 768px){
    .section_two_wrapper .flex-container{
        flex-direction: column-reverse;
    }
  .section_two_wrapper .section-img{
  		max-height: 400px;
  }
}
@media only screen and (max-width: 388px){
	.section_two_wrapper .text-section .btns .single-btn{
        width: 90%;
      	margin: 10px auto 10px auto;
    }
}
</style>
<body>
    <div class="section_two_wrapper">
        <div class="container flex-container">
                <div class="text-section flex-element">
                    <h1 class="title">{{section.settings.main_text}}</h1>
                    <ul class="check-lists">
                      {% for block in section.blocks %}
                        <li class="each-item"><i class="fas fa-check"></i> <span>{{block.settings.text}}</span></li>
                      {% endfor %}
                    </ul>
                    <div class="btns">
                        <div class="single-btn">
                            <a href="{{ section.settings.btn_url }}" class="btn btn-two">{{ section.settings.btn_label }}</a>
                        </div>
                    </div>
                </div>

                <div class="image-section-wrapper flex-element">
                    <div class="img-section">
                        <img class="section-img" src="{{section.settings.section_img | img_url: 'master'}}">
                    </div>
                </div>
            
        </div>
    </div>

{% schema %}
  {
    "name": "Custom Image With Text",
    "settings": [
  	{
  		"type": "text",
  		"id": "main_text",
  		"label": "Featured Text",
  		"default": "No matter which XPRO product you select, you're Powered by Blink"
  	},
  	{
  		"type": "image_picker",
  		"id": "section_img",
  		"label": "Image"
  	}, 
  	{
  		"type": "text",
  		"id": "background_color",
  		"label": "Background Color",
  		"default": "linear-gradient(to top, #000, #013b81)"
  	},
  	{
		"type": "color",
  		"id": "title_color",
  		"label": "Heading Color"
  	},
  	{
  		"type": "color",
  		"id": "subtitle_color",
  		"label": "List Items Color"
  	},
	{
  		"type": "text",
  		"id": "btn_label",
  		"label": "Button Label",
  		"default": "Let's Talk"
  	},
	{
  		"type": "url",
  		"id": "btn_url",
  		"label": "Button Url"
  	},  
  	{
  		  "type": "checkbox",
  		  "id": "full_width",
  		  "label": "Full Width",
  		  "default": true
  	},
    {
        "type": "checkbox",
        "id": "row_reverse",
        "label": "Row Reverse",
        "default": false
    }
  ],"blocks": [
        {
            "type": "text",
  			"name": "Section Sub Texts",
            "settings": [
                {
                    "type": "text",
                    "id": "text",
                    "label": "Sub Texts"
                }
            ]
        }
    ],
  	"presets": [
        {
            "name": "Custom Image With Text",
            "category": "Custom Section"
        }
    ]
  }
{% endschema %}
