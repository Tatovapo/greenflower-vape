    <style>
        
        .wenexus-custom_collection .section-wrapper{
            max-width: 1300px;
            width: 90%;
            /* background-color: #42a5f5; */
            margin: 0 auto;
            padding: 50px 0;
        }
        .wenexus-custom_collection .main-flex-wrapper{
            display: flex;
            justify-content: center;
        }
        .wenexus-custom_collection img{
            display: block;
            width: 100%;
            object-fit: cover;
            height: 100%;
        }

        /* first three product */
        .wenexus-custom_collection .first-three-product{
            display: flex;
            flex-direction: column;
            gap: 20px;
            margin-right: 20px;
        }
        .wenexus-custom_collection .first-three-second{
            display: flex;
            gap: 20px;
        }
        .wenexus-custom_collection .item{
            width: 100%;
            height: 400px;
            position: relative;
        }
        .wenexus-custom_collection .item a:nth-child(2){
            width: 100%;
            height: 100%;
            display: block;
            text-align: center;
            color: #fff;
            font-size: 30px;
            text-decoration: none;
        }
        .wenexus-custom_collection .item a:nth-child(1){
            position: absolute;
            top: 50%;
            color: black;
            font-size: 30px;
            text-decoration: none;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            background: black;
            font-weight: bold;
            color: #fff;
            padding: 0 10px;
        }
        /* THEN TWO PRODUCTS */
        .wenexus-custom_collection .then-two-products{
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
        }
        @media only screen and (max-width: 576px){
            .wenexus-custom_collection .flex-content{
                display: block;
            }
            .wenexus-custom_collection .first-three-product{
                margin-right: 0;
            }
            .wenexus-custom_collection .item{
                margin-top: 20px;
            }
        }
        .wenexus-custom_collection a:hover{
            opacity: 1;
        }

    </style>
    <div class="section-wrapper">
        <div class="main-flex-wrapper flex-content">
            <div class="first-three-product flex-content">
            {%- assign collection = collections[section.settings.collection_one] -%}
                <div class="first-three-first">
                    <div class="item">
                        <a href="{{collection.url}}">{{collection.title}}</a>
                        {% if section.settings.collection_one_background != blank %}
                            <a href="{{collection.url}}"><img src="{{ section.settings.collection_one_background | img_url: 'master' }}"></a>
                        {% else %}
                            <a href="{{collection.url}}"><img src="{{ collection.featured_image | img_url: 'master' }}"></a>
                        {% endif %}
                    </div>
                </div>
                {%- assign collection = collections[section.settings.collection_two] -%}
                <div class="first-three-second flex-content">
                    <div class="item">
                        <a href="{{collection.url}}">{{collection.title}}</a>
                        {% if section.settings.collection_two_background != blank %}
                            <a href="{{collection.url}}"> <img src="{{ section.settings.collection_two_background | img_url: 'master' }}"></a>
                        {% else %}
                            <a href="{{collection.url}}"> <img src="{{ collection.featured_image | img_url: 'master' }}"></a>
                        {% endif %}
                    </div>
                    {%- assign collection = collections[section.settings.collection_three] -%}
                    <div class="item">
                        <a href="{{collection.url}}">{{collection.title}}</a>
                        {% if section.settings.collection_three_background != blank %}
                            <a href="{{collection.url}}"> <img src="{{ section.settings.collection_three_background | img_url: 'master' }}"></a>
                            {% else %}
                            <a href="{{collection.url}}"> <img src="{{ collection.featured_image | img_url: 'master' }}"></a>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="then-two-products flex-content">
            {%- assign collection = collections[section.settings.collection_four] -%}
                <div class="item">
                    <a href="{{collection.url}}">{{collection.title}}</a>
                    {% if section.settings.collection_four_background != blank %}
                        <a href="{{collection.url}}"> <img src="{{ section.settings.collection_four_background | img_url: 'master' }}"></a>
                    {% else %}
                        <a href="{{collection.url}}"> <img src="{{ collection.featured_image | img_url: 'master' }}"></a>
                    {% endif %}
                </div>
                {%- assign collection = collections[section.settings.collection_five] -%}
                <div class="item">
                    <a href="{{collection.url}}">{{collection.title}}</a>
                    {% if section.settings.collection_five_background != blank %}
                        <a href="{{collection.url}}"> <img src="{{ section.settings.collection_five_background | img_url: 'master' }}"></a>
                    {% else %}
                        <a href="{{collection.url}}"> <img src="{{ collection.featured_image | img_url: 'master' }}"></a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</body>


